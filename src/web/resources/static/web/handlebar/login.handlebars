<div class="centered">
	{{#if error}}
	<div class="alert alert-danger announcement">
	  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  {{{error}}}
	</div>
	{{/if}}
	<div class="form-group">
		<label for="usr">Name:</label>
		<input type="text" class="form-control" id="usr">
	</div>
	<div class="form-group">
		<label for="pwd">Password:</label>
		<input type="password" class="form-control" id="pwd">
	</div>
	<div class="row">
		<button type="button" class="btn btn-primary gameButton" onclick="login()">Login</button>
	</div>
	<div class="row">
		<button type="button" class="btn btn-default gameButton" onclick="createUser()">Create Account</button>
	</div>
</div>